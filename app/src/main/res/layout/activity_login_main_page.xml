    <Button
        android:id="@+id/writing"
        android:layout_width="169dp"
        android:layout_height="159dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="13dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/i22"
        android:clickable="true"
        android:onClick="writeBtn"
        android:text="Online Writing"
        android:textColor="#0d0d0d"
        android:textSize="30dp" />

    <Button
        android:id="@+id/coding"
        android:layout_width="171dp"
        android:layout_height="153dp"

        android:layout_alignBottom="@+id/writing"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/writing"
        android:background="@drawable/i23"
        android:clickable="true"
        android:onClick="codeBtn"
        android:text="Online Coding"
        android:textColor="#f7f1f1"
        android:textSize="30dp" />


    <Button
        android:id="@+id/marketing"
        android:layout_width="153dp"
        android:layout_height="140dp"

        android:layout_alignEnd="@+id/writing"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/i24"
        android:clickable="true"
        android:onClick="marketBtn"
        android:text="Online Marketing"
        android:textColor="#e9e7e7"
        android:textSize="25dp" />

    <Button
        android:id="@+id/survey"
        android:layout_width="158dp"
        android:layout_height="145dp"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="18dp"
        android:background="@drawable/i25"
        android:clickable="true"
        android:onClick="surveyBtn"
        android:text="Online Survey"
        android:textColor="#0d0d0d"
        android:textSize="30dp" />

    <Button
        android:id="@+id/instant_cash"
        android:layout_width="167dp"
        android:layout_height="114dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginBottom="74dp"
        android:background="@drawable/i26"
        android:text="Instant Cash"
        android:clickable="true"
        android:onClick="instantBtn"
        android:textColor="#0d0d0d"
        android:textSize="30dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/btnstyle"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Log Out"
        android:textColor="#0d0d0d"
        android:textSize="20dp" />

