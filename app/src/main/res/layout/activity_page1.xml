                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="FIVERR"
                android:textColor="#de521f"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text=" Use Fiverr search and side filters, to find the right freelancer for your project. Once you've found a service you'd like to order, click the Gig. Choosing the right freelancer is easy: "
