<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thealteria.loginapp.TermActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <!-- <android.support.v7.widget.Toolbar
             android:id="@+id/toolbar"
             android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"
             android:background="?attr/colorPrimary"
             app:popupTheme="@style/AppTheme.PopupOverlay" />-->

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_term" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@id/rlay"
            android:clickable="true">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="JOBS ONLINE"
                android:textColor="#de521f"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="  We are happy to have you on board. Enjoy our services. But just before that take some few minutes to read our terms"
                android:textColor="#0d0d0d"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="How it Works:"
                android:textColor="#de521f"
                android:textSize="10dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text=" 1. Sign Up. \n 2. Choose Category. \n 3. Connect with jobs and get paid"
                android:textColor="#0d0d0d"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Payment:"
                android:textColor="#de521f"
                android:textSize="10dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewe1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Once you have completed some orders  get paid via: \n  1. Skrill. \n 2. Payoneer. \n 3. Wire Transfer. \n 4. Paypal."
                android:textColor="#0d0d0d"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewf1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Job Categories:"
                android:textColor="#de521f"
                android:textSize="10dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Not limited to: \n  1. Academic writing. \n 2. Coding. \n 3. Marketing. \n 4. Survey. "
                android:textColor="#0d0d0d"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="ACCEPTANCE OF THE TERMS AND CONDITIONS"
                android:textColor="#de521f"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text=" Before registering , You should carefully read and understand these terms and conditions which will govern the use and operation of the Jobs Online "
                android:textColor="#0d0d0d"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="DECLINE ON THE TERMS AND CONDITIONS"
                android:textColor="#de521f"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text=" If you do not agree with these Terms and Conditions, Please Decline on registration Menu "
                android:textColor="#0d0d0d"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="FEES"
                android:textColor="#de521f"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text=" No FEE is charge since this application is just getting you to several jobs online. WE DO NOT OFFER JOBS OURSELVES "
                android:textColor="#0d0d0d"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="DISCLOSURE OF INFORMATION"
                android:textColor="#de521f"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text=" You hereby expressly consent and authorize the app to disclose receive record or utilize your personal information or information or data relating to JOBS ONLINE "
                android:textColor="#0d0d0d"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- <TextView
             android:id="@+id/showAll"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="#000"
             android:textSize="25sp" />-->
    </ScrollView>

